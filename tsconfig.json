{
  "compilerOptions": {
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "module": "commonjs",
    "lib": ["es2021"],
    "target": "es2021",
    "outDir": "./dist",
    "incremental": true,
    "sourceMap": true,
    "baseUrl": "./",
    "paths": {
      "@/*": ["src/*"],
      "@/libs/*": ["libs/*"]
    }
  },
  "exclude": ["node_modules", "./dist"],
  "include": ["**/*.ts", "**/*.js"]
}
